    <!--Filter Encoding Character-->
    <filter>
        <filter-name>EncodingCharacter</filter-name>
        <filter-class>filters.EncodingCharacter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>EncodingCharacter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!--#END#Filter-->





</web-app>